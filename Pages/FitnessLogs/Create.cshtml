@page
@model FitraLife.Pages.FitnessLogs.CreateModel
@{
    ViewData["Title"] = "Log Activity";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="background-color: #1e293b;">
                <div class="card-header bg-primary text-white p-4 border-0 text-center position-relative overflow-hidden">
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-white" style="transform: skewY(-5deg) scale(1.5); opacity: 0.1;"></div>
                    <h2 class="fw-bold mb-1 position-relative">Log Activity</h2>
                    <p class="mb-0 opacity-75 position-relative">Record your daily progress</p>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    @if (TempData["StatusMessage"] != null)
                    {
                        <div class="alert alert-success text-center rounded-3 shadow-sm mb-4">
                            @TempData["StatusMessage"]
                        </div>
                    }

                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="Input.Date" class="form-label fw-semibold text-light small text-uppercase">Date</label>
                            <input asp-for="Input.Date" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="Input.Date" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <label asp-for="Input.Steps" class="form-label fw-semibold text-light small text-uppercase">Steps</label>
                                <div class="input-group">
                                    <span class="input-group-text text-primary">üë£</span>
                                    <input asp-for="Input.Steps" class="form-control form-control-lg" placeholder="0" />
                                </div>
                                <span asp-validation-for="Input.Steps" class="text-danger small"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="Input.WorkoutMinutes" class="form-label fw-semibold text-light small text-uppercase">Workout Minutes</label>
                                <div class="input-group">
                                    <span class="input-group-text text-warning">‚è±Ô∏è</span>
                                    <input asp-for="Input.WorkoutMinutes" class="form-control form-control-lg" placeholder="Min" />
                                </div>
                                <span asp-validation-for="Input.WorkoutMinutes" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <div class="d-flex justify-content-between align-items-center">
                                    <label asp-for="Input.CaloriesBurned" class="form-label fw-semibold text-light small text-uppercase">Calories Burned</label>
                                    <button type="button" class="btn btn-link p-0 text-white opacity-50" style="font-size: 0.85rem;" data-bs-toggle="modal" data-bs-target="#caloriesInfoModal">
                                        <i class="bi bi-info-circle-fill"></i>
                                    </button>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text text-success">üî•</span>
                                    <input asp-for="Input.CaloriesBurned" class="form-control form-control-lg" placeholder="Kcal" />
                                </div>
                                <span asp-validation-for="Input.CaloriesBurned" class="text-danger small"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="Input.CaloriesEaten" class="form-label fw-semibold text-light small text-uppercase">Calories Eaten</label>
                                <div class="input-group">
                                    <span class="input-group-text text-danger">ü•ó</span>
                                    <input asp-for="Input.CaloriesEaten" class="form-control form-control-lg" placeholder="Kcal" />
                                </div>
                                <span asp-validation-for="Input.CaloriesEaten" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm fw-bold">Save Activity Log</button>
                            <a asp-page="/Dashboard/Index" class="btn btn-light btn-lg rounded-pill text-muted">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Calories Info Modal -->
<div class="modal fade" id="caloriesInfoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold text-primary">Logging Calories Burned</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <p class="text-dark">To get the most accurate predictions, please log your <strong>Active Energy</strong> only.</p>
                
                <div class="alert alert-light border rounded-3 mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-success me-2">Do Log</span>
                        <span class="text-muted small">Calories burned during workouts, walking, or sports.</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-secondary me-2">Don't Log</span>
                        <span class="text-muted small">Your BMR (Base Metabolic Rate). We calculate this automatically!</span>
                    </div>
                </div>

                <p class="small text-muted mb-0">
                    <i class="bi bi-lightbulb me-1"></i>
                    <strong>Tip:</strong> Most smartwatches show "Active Calories" and "Total Calories". Use the "Active" number here.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
