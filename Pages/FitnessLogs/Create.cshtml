@page
@model FitraLife.Pages.FitnessLogs.CreateModel
@{
    ViewData["Title"] = "Log Today's Fitness Data";
}

<h2>Log Today's Data</h2>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["StatusMessage"]
    </div>
}

<form method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label asp-for="Input.Date" class="form-label"></label>
        <input asp-for="Input.Date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Input.Steps" class="form-label"></label>
        <input asp-for="Input.Steps" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Input.CaloriesBurned" class="form-label"></label>
        <input asp-for="Input.CaloriesBurned" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Input.CaloriesEaten" class="form-label"></label>
        <input asp-for="Input.CaloriesEaten" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Input.WorkoutMinutes" class="form-label"></label>
        <input asp-for="Input.WorkoutMinutes" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Save</button>
</form>
