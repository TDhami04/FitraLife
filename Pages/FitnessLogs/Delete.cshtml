@page "{id:int}"
@model FitraLife.Pages.FitnessLogs.DeleteModel
@{
    ViewData["Title"] = "Delete Fitness Log";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="background-color: #1e293b;">
                <div class="card-header bg-danger text-white p-4 border-0 text-center position-relative overflow-hidden">
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-white" style="transform: skewY(-5deg) scale(1.5); opacity: 0.1;"></div>
                    <h2 class="fw-bold mb-1 position-relative">Delete Log?</h2>
                    <p class="mb-0 opacity-75 position-relative">This action cannot be undone.</p>
                </div>

                <div class="card-body p-4 p-md-5 text-center">
                    @if (Model.Log != null)
                    {
                        <div class="mb-4">
                            <p class="text-light mb-2">You are about to delete the log for:</p>
                            <h3 class="fw-bold text-white">@Model.Log.Date.ToString("D")</h3>
                        </div>

                        <div class="row g-2 mb-4 justify-content-center">
                            <div class="col-auto">
                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2 rounded-pill">ðŸ‘£ @Model.Log.Steps Steps</span>
                            </div>
                            <div class="col-auto">
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">ðŸ”¥ @Model.Log.CaloriesBurned Kcal</span>
                            </div>
                        </div>

                        <form method="post" class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm fw-bold">Yes, Delete It</button>
                            <a asp-page="/Dashboard/Index" class="btn btn-light btn-lg rounded-pill text-muted">Cancel</a>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">Log not found.</div>
                        <a asp-page="/Dashboard/Index" class="btn btn-secondary">Back to Dashboard</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
