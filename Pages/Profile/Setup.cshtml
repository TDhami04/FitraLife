@page
@model FitraLife.Pages.Profile.SetupModel
@{
    ViewData["Title"] = "Set Up Your Profile";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 rounded-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center text-primary mb-4">Set Up Your Profile</h2>
        <p class="text-center text-muted mb-4">
            Personalize your fitness experience! Fill in your basic details below.
        </p>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Height" class="form-label fw-semibold"></label>
                <input asp-for="Input.Height" class="form-control" placeholder="in cm" />
                <span asp-validation-for="Input.Height" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Weight" class="form-label fw-semibold"></label>
                <input asp-for="Input.Weight" class="form-control" placeholder="in kg" />
                <span asp-validation-for="Input.Weight" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Age" class="form-label">Age</label>
                <input asp-for="Input.Age" class="form-control" type="number" min="10" max="100" required />
            </div>

            <div class="mb-3">
                <label asp-for="Input.Gender" class="form-label">Gender</label>
                <select asp-for="Input.Gender" class="form-select">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ActivityLevel" class="form-label">Activity Level</label>
                <select asp-for="Input.ActivityLevel" class="form-select">
                    <option>Sedentary</option>
                    <option>Light</option>
                    <option>Moderate</option>
                    <option>Active</option>
                    <option>Very Active</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Input.GoalType" class="form-label">Fitness Goal</label>
                <select asp-for="Input.GoalType" class="form-select">
                    <option>Lose</option>
                    <option>Maintain</option>
                    <option>Gain</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Input.FitnessGoal" class="form-label">Goal Description</label>
                <input asp-for="Input.FitnessGoal" class="form-control" placeholder="E.g. Build muscle, lose 5kg..." />
            </div>

            <button type="submit" class="btn btn-success w-100 mt-3">
                Continue to Dashboard
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
