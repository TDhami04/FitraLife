@page
@model FitraLife.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Your Profile";
}

<div class="container py-5 profile-page">

    <!-- =================== HEADER SUMMARY CARD =================== -->
    <div class="card mb-5 border-0 shadow-sm rounded-4 profile-header overflow-hidden">
        <div class="card-body p-5 position-relative">
            <!-- Decorative background circle -->
            <div class="position-absolute top-0 end-0 translate-middle p-5 rounded-circle bg-primary" style="width: 300px; height: 300px; filter: blur(50px); opacity: 0.1;"></div>
            
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center position-relative">
                <div class="d-flex align-items-center gap-4">
                    <div class="profile-avatar bg-primary shadow-lg border border-4 border-primary d-flex justify-content-center align-items-center rounded-circle" style="width: 100px; height: 100px; font-size: 2.5rem;">
                        <span class="avatar-initial text-white">@User.Identity.Name?.Substring(0,1).ToUpper()</span>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-1">@User.Identity.Name</h2>
                        <div class="d-flex gap-2 align-items-center">
                            <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                                @(Model.Input?.ActivityLevel ?? "Unknown Activity")
                            </span>
                            @if (Model.HasProfileComplete) { <span class="text-success small fw-bold">‚úì Profile Complete</span> }
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4 mt-md-0">
                    <div class="d-flex gap-4">
                        <div class="text-center">
                            <h3 class="fw-bold mb-0">@((Model.Input?.BMI ?? 0).ToString("0.0"))</h3>
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem; letter-spacing: 1px;">BMI Score</small>
                        </div>
                        <div class="vr opacity-25"></div>
                        <div class="text-center">
                            <h3 class="fw-bold mb-0">@Model.ProfileCompleteness%</h3>
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem; letter-spacing: 1px;">Completion</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success text-center shadow-sm rounded-3 mb-4">@Model.StatusMessage</div>
    }

    <form method="post">
        <div class="row g-4">
            <!-- =================== PERSONAL INFO =================== -->
            <div class="col-lg-7">
                <div class="card border-0 shadow-sm h-100 rounded-4">
                    <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                        <h5 class="fw-bold mb-0 text-secondary">Personal Details</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted small text-uppercase">Age</label>
                                <input asp-for="Input.Age" class="form-control form-control-lg" type="number" min="0" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted small text-uppercase">Gender</label>
                                <select asp-for="Input.Gender" class="form-select form-select-lg">
                                    <option>Male</option>
                                    <option>Female</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted small text-uppercase">Height (cm)</label>
                                <input asp-for="Input.Height" class="form-control form-control-lg" type="number" step="0.1" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted small text-uppercase">Weight (kg)</label>
                                <input asp-for="Input.Weight" class="form-control form-control-lg" type="number" step="0.1" />
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-semibold text-muted small text-uppercase">Activity Level</label>
                                <select asp-for="Input.ActivityLevel" class="form-select form-select-lg">
                                    <option value="Sedentary">Sedentary (Little to no exercise)</option>
                                    <option value="Light">Light (Exercise 1-3 days/week)</option>
                                    <option value="Moderate">Moderate (Exercise 3-5 days/week)</option>
                                    <option value="Active">Active (Exercise 6-7 days/week)</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-4 p-4 bg-primary bg-opacity-10 rounded-4">
                            <div class="d-flex justify-content-between align-items-end mb-2">
                                <div>
                                    <small class="text-primary fw-bold text-uppercase">Current Health Status</small>
                                    <h3 class="fw-bold mb-0 text-dark">
                                        @if (Model.Input?.BMI != null)
                                        {
                                            var bmi = Model.Input?.BMI ?? 0.0;
                                            string cat = bmi < 18.5 ? "Underweight" : bmi < 25 ? "Healthy Weight" : bmi < 30 ? "Overweight" : "Obese";
                                            @cat
                                        }
                                        else { <text>Unknown</text> }
                                    </h3>
                                </div>
                                <div class="text-end">
                                    <span class="display-6 fw-bold text-primary">@(Model.Input?.BMI.ToString("0.0") ?? "--")</span>
                                    <span class="text-muted small d-block">BMI</span>
                                </div>
                            </div>
                            @if (Model.Input?.BMI != null)
                            {
                                var bmi = Model.Input?.BMI ?? 0.0;
                                <div class="progress" style="height: 8px; background-color: rgba(0,0,0,0.05);">
                                    <div class="progress-bar @(bmi < 18.5 ? "bg-info" : bmi < 25 ? "bg-success" : bmi < 30 ? "bg-warning" : "bg-danger")" 
                                         role="progressbar" 
                                         style="width:@(Math.Min(bmi / 40 * 100, 100))%"></div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- =================== FITNESS GOALS =================== -->
            <div class="col-lg-5">
                <div class="card border-0 shadow-sm h-100 rounded-4">
                    <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                        <h5 class="fw-bold mb-0 text-secondary">Goals & Targets</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted small text-uppercase">Primary Goal</label>
                            <div class="d-flex gap-2">
                                @foreach(var type in new[] { "Lose", "Maintain", "Gain" })
                                {
                                    <input type="radio" class="btn-check" name="Input.GoalType" id="goal_@type" value="@type" @(Model.Input.GoalType == type ? "checked" : "")>
                                    <label class="btn btn-outline-primary flex-grow-1 py-2" for="goal_@type">@type</label>
                                }
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted small text-uppercase">Specific Target</label>
                            <textarea asp-for="Input.FitnessGoal" class="form-control rounded-3" rows="3" placeholder="What do you want to achieve?"></textarea>
                        </div>

                        <div class="p-3 border rounded-3 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <span class="fs-4 me-2">üë£</span>
                                <label class="form-label fw-bold mb-0">Weekly Steps</label>
                            </div>
                            <input asp-for="Input.StepGoal" class="form-control border-0 border-bottom rounded-0 px-0" type="number" placeholder="e.g. 70000" />
                        </div>

                        <div class="p-3 border rounded-3">
                            <div class="d-flex align-items-center mb-2">
                                <span class="fs-4 me-2">‚è±Ô∏è</span>
                                <label class="form-label fw-bold mb-0">Weekly Minutes</label>
                            </div>
                            <input asp-for="Input.WorkoutMinutesGoal" class="form-control border-0 border-bottom rounded-0 px-0" type="number" placeholder="e.g. 300" />
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 p-4 pt-0">
                        <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-sm">
                            Save Profile Changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Animate BMI bar
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".bmi-progress .progress-bar").forEach(bar => {
                const width = bar.style.width;
                bar.style.width = "0";
                setTimeout(() => { bar.style.width = width; }, 300);
            });
        });
    </script>
}
