@page
@model FitraLife.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 rounded-4 text-center" style="max-width: 400px; width: 100%;">
        <h3 class="mb-3 text-primary fw-bold">Confirm Logout</h3>
        <p class="text-muted mb-4">Are you sure you want to log out?</p>

        <form method="post">
            <button type="submit" class="btn btn-danger w-100 mb-2">Logout</button>
            <a asp-page="/Dashboard/Index" class="btn btn-outline-secondary w-100">Cancel</a>
        </form>
    </div>
</div>
