<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitraLife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitraLife.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">FitraLife</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarMain">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Dashboard/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Account/Logout">Logout</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Profile/Index">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/WorkoutGenerator/Index">
                                Workout Generator
                            </a>
                        </li>
                    </ul>

                    <!-- Theme toggle on far right -->
                    <button id="themeToggle" class="btn btn-outline-primary btn-sm ms-auto" title="Toggle theme">
                        🌙
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FitraLife - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Floating Chatbot Widget -->
    <div id="chatWidget" class="chat-widget">

        <button id="chatToggle" class="chat-toggle-btn" title="Chat with AI Assistant">
            <span class="chat-icon">💬</span>
            <span class="chat-close-icon">✕</span>
        </button>

        <div id="chatWindow" class="chat-window">
            <div class="chat-header">
                <div class="d-flex align-items-center">
                    <span class="chat-bot-icon me-2">🤖</span>
                    <div>
                        <div class="fw-bold">FitraLife AI</div>
                        <small class="text-white-50">Your fitness assistant</small>
                    </div>
                </div>
                <div class="chat-header-actions">
                    <button class="btn-icon" id="clearChatBtn" title="Clear chat">
                        <i>🗑️</i>
                    </button>
                    <button class="btn-icon" id="minimizeChatBtn" title="Minimize">
                        <i>−</i>
                    </button>
                </div>
            </div>

            <div class="chat-body" id="chatBody">
                <div class="chat-welcome text-center py-4">
                    <div class="mb-3">🤖</div>
                    <h6>Hello! I'm your AI fitness assistant</h6>
                    <p class="small text-muted">Ask me anything about workouts, nutrition, or wellness!</p>
                </div>
            </div>

            <div class="chat-quick-prompts" id="quickPrompts">
                <button class="quick-prompt-btn" data-prompt="What exercises can I do to build muscle?">💪 Build Muscle</button>
                <button class="quick-prompt-btn" data-prompt="Give me a healthy meal plan">🥗 Meal Plan</button>
                <button class="quick-prompt-btn" data-prompt="How can I stay motivated?">⚡ Motivation</button>
            </div>

            <div class="chat-footer">
                <div class="input-group">
                    <input type="text" id="chatInput" class="form-control chat-input" placeholder="Type your message..." />
                    <button class="btn btn-primary" id="sendMessageBtn" type="button">
                        <span id="sendIcon">📤</span>
                        <span id="sendSpinner" class="spinner-border spinner-border-sm d-none"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/js/chatbot.js" asp-append-version="true"></script>

    <script>
        const toggle = document.getElementById('themeToggle');
        const body = document.body;

        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            body.classList.add('dark-mode');
            toggle.textContent = '🌞';
        }

        toggle.addEventListener('click', () => {
            const isDark = body.classList.toggle('dark-mode');
            toggle.textContent = isDark ? '🌞' : '🌙';
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
        });
    </script>

</body>
</html>