<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitraLife</title>
    
    <!-- Google Fonts: Poppins (Headings) & Inter (Body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Poppins:wght@500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitraLife.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top backdrop-blur border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                    <span class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">F</span>
                    FitraLife
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navbarMain">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 fw-semibold gap-3">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Profile/Index">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/WorkoutGenerator/Index">🏋️ Workout Generator</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/MealGenerator/Index">🥗 Meal Generator</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <ul class="navbar-nav d-flex flex-row gap-2">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Account/Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="btn btn-outline-primary btn-sm rounded-pill px-3" asp-page="/Account/Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-primary btn-sm rounded-pill px-3" asp-page="/Account/Register">Register</a>
                                </li>
                            }
                        </ul>
                        <!-- Theme toggle removed -->
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Floating Chatbot Widget -->
    <div id="chatWidget" class="chat-widget">

        <button id="chatToggle" class="chat-toggle-btn" title="Chat with AI Assistant">
            <span class="chat-icon">💬</span>
            <span class="chat-close-icon">✕</span>
        </button>

        <div id="chatWindow" class="chat-window">
            <div class="chat-header position-relative overflow-hidden">
                <div class="position-absolute top-0 start-0 w-100 h-100 bg-white" style="transform: skewY(-5deg) scale(1.5); opacity: 0.1; pointer-events: none;"></div>
                <div class="d-flex align-items-center position-relative">
                    <span class="chat-bot-icon me-2">🤖</span>
                    <div>
                        <div class="fw-bold">FitraLife AI</div>
                        <small class="text-white-50">Your fitness assistant</small>
                    </div>
                </div>
                <div class="chat-header-actions position-relative">
                    <button class="btn-icon" id="clearChatBtn" title="Clear chat">
                        <i>🗑️</i>
                    </button>
                    <button class="btn-icon" id="minimizeChatBtn" title="Minimize">
                        <i>−</i>
                    </button>
                </div>
            </div>

            <div class="chat-body" id="chatBody">
                <div class="chat-welcome text-center py-4">
                    <div class="mb-3">🤖</div>
                    <h6>Hello! I'm your AI fitness assistant</h6>
                    <p class="small text-muted">Ask me anything about workouts, nutrition, or wellness!</p>
                </div>
            </div>

            <div class="chat-quick-prompts" id="quickPrompts">
                <button class="quick-prompt-btn" data-prompt="What exercises can I do to build muscle?">💪 Build Muscle</button>
                <button class="quick-prompt-btn" data-prompt="Give me a healthy meal plan">🥗 Meal Plan</button>
                <button class="quick-prompt-btn" data-prompt="How can I stay motivated?">⚡ Motivation</button>
            </div>

            <div class="chat-footer">
                <div class="input-group">
                    <input type="text" id="chatInput" class="form-control chat-input" placeholder="Type your message..." />
                    <button class="btn btn-primary" id="sendMessageBtn" type="button">
                        <span id="sendIcon">📤</span>
                        <span id="sendSpinner" class="spinner-border spinner-border-sm d-none"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/js/chatbot.js" asp-append-version="true"></script>

</body>